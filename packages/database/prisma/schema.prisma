generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  password String
  websites Website[]
}

model Website {
  id             Int          @id @default(autoincrement())
  url            String
  organizationId Int
  organization   Organization @relation(fields: [organizationId], references: [id])
  deleted        Boolean      @default(false)
}
